<!DOCTYPE html>
<html>
  <head>
    <title>GoodHairDay</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="media-block">
        <div>
          <%= link_to "Home", root_path %>
          <% if !!current_user %>
            <%= link_to "#{current_user.username}'s profile", user_path(current_user), class: "" %>
            <%= link_to "Logout", logout_path, class:"navbar-brand", method: :delete %>
          <% else %>
            <%= link_to "Login", login_path%>
            <%= link_to "Signup", signup_path%>
            <%= link_to "Login with Facebook", '/auth/facebook' %><br>
          <% end %>

          <% if current_user == admin? %>
            <%= link_to "Category", categories_path %>
          <% end %>

        <%= yield %>
      </div>
  </body>
</html>
