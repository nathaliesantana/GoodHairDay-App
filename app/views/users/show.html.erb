<h1> Hi <%= @user.username.capitalize %> </h1><br>
<h4> <%= @user.hair_texture %> | <%= @user.hair_structure %> | <%= @user.scalp_moist %>
<% if session[:user_id] == @user.id %>
<%= link_to "Edit profile", edit_user_path(current_user)%>
<% end %>
</h4>

<br>
<%= link_to "New Review", new_review_path %>

<h4>Here are all of your products:</h4>
<% Review.all.map do |f| %>
  <% if f.user_id == @user.id %>
    <li><%= link_to "#{f.product.name} - #{f.product.category.name}", f%></li>
  <% end %>
<%end%>
