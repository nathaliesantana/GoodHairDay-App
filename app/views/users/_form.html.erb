<%= form_for user do |f| %>
    <%= f.label :hair_texture %>
    <%= f.select :hair_texture, ['Thin', 'Medium', 'Thick'] %><br>
    <br>
    <%= f.label :hair_structure %>
    <%= f.select :hair_structure, ['Straight', 'Wavy', 'Curly', 'Kinky'] %><br>
    <br>
    <%= f.label :scalp_moist %>
    <%= f.select :scalp_moist, ['Oily', 'Normal', 'Dry'] %>
    <br>
    <br>
    <%= f.submit 'submit', class:"buttons"%>
<% end %>
