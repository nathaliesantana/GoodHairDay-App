
<h1><%= @review.user.username.capitalize %>'s product review </h1>
<ul>
    <strong>Product Name:  </strong><%= @review.product.name %><br>
    <strong>Product Brand:  </strong><%= @review.product.brand %><br>
    <strong>Product Type:  </strong><%= @review.product.category.name %><br>
    <br>
    <strong>Animal tested:  </strong><%= @review.animal_tested %><br>
    <strong>Country of origin:  </strong><%= @review.country_of_origin %><br>
    <strong>Silicone Free:  </strong><%= @review.silicone %><br>
    <strong>Sulfate Free:  </strong><%= @review.sulfate %><br>
    <strong>Rating:  </strong><%= @review.rating %><br>
    <strong>Comment:  </strong><br><%= @review.comment %><br>
 </ul>
<% if session[:user_id] == @review.user_id %>
 <%= link_to "Edit review", edit_review_path(@review)%>
 <%= link_to "Delete", @review, method: :delete %>
<% end %>
